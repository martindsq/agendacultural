<!DOCTYPE html>
<html>
  <head>
    <title>Agendacultural</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="masthead">
      <div class="container h-100">
        <div class="row h-100 align-items-center">
          <div class="col-12 text-center">
            <h1 class="mt-3 mb-0">Agenda cultural</h1>
            <p class="mb-3 lead">Una agenda accesible</p>
          </div>
        </div>
      </div>
    </header>
    <section class="py-5">
      <div class="container">
        <%= yield %>
      </div>
    </section>
    <footer class="footer">
      <div class="container border-top">
        <span class="text-muted"><%= t('footer', author: link_to('Martin Dutra', 'https://github.com/martindsq')).html_safe %></span>
      </div>
    </footer>
  </body>
</html>
