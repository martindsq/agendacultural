<h2 class="text-center my-5">Eventos</h2>
<div class="card-columns">
  <% @events.each do |event| %>
    <div class="card">
      <div class="card-body">
        <div class="card border-0">
          <div class="row">
            <div class="col-auto text-center">
              <p class="my-0 text-uppercase"><%= t('date.abbr_month_names')[8] %></p>
              <p class="my-0 display-4"><%= event.time.day %></p>
            </div>
            <div class="col-md-8">
              <h5 class="card-title my-0">
                <%= link_to event.title, event_path(event), class: 'text-dark' %>
              </h5>
              <p class="card-text"><small class="text-muted"><%= event.location %><br><%= event.time.to_s(:time) %></small></p>
            </div>
          </div>
        </div>
        <p class="card-text"><%= event.description %></p>
        <%= link_to t(:see_detail), event_path(event), class: 'card-link' %>
      </div>
    </div>
  <% end %>
</div>
