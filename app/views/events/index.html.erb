<h2 class="text-center sr-only">Eventos</h2>
<div class="card-columns">
  <% @events.each do |event| %>
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="card border-0">
          <div class="row">
            <div class="col-auto text-center">
	      <p class="my-0 text-uppercase"><%= I18n.l(event.time, format: '%b') %></p>
              <p class="my-0 display-4"><%= event.time.day %></p>
            </div>
            <div class="col-md-8">
              <h5 class="card-title my-0">
                <%= link_to event.title, event_path(event), class: 'text-dark' %>
              </h5>
              <p class="card-text">
                <small class="text-muted text-uppercase">
                  <%if !event.place.nil? %><%= event.place %><br><% end %>
                  <%= I18n.l(event.time, format: '%A')%> <%= event.time.to_s(:time) %>
                </small></p>
            </div>
          </div>
        </div>
        <p class="card-text"><%= event.description %></p>
        <%= link_to t(:see_detail), event_path(event), class: 'card-link' %>
      </div>
    </div>
  <% end %>
</div>
